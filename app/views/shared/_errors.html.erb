<% if obj.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(obj.errors.count, "error") %> found. Please, check out all the errors in order to continue:
        </h2>

        <ul>
            <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>